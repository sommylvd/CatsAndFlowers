<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800"
        WindowState="Maximized" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" 
               Stretch="UniformToFill" 
               Source="meadow.jpg" 
               RenderTransformOrigin="0.423,0.582"/>
        <Image HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Margin="0,10,-3,0" 
               Height="300" 
               Width="363"
               MouseLeftButtonDown="ShopImage_MouseLeftButtonDown"
               Source="shopbutton.png"/>
        <Image HorizontalAlignment="Left" 
               VerticalAlignment="Bottom"
               Margin="10,0,0,10" 
               Height="420" 
               Width="260" 
               MouseLeftButtonDown="OnForestImageClick" 
               Source="foresttable.png"/>

    </Grid>
</Window>
